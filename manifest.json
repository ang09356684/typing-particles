{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": ["storage"],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "shared/constants.js",
        "content/caret-detector.js",
        "content/canvas-manager.js",
        "content/particle-engine.js",
        "content/effects/burst.js",
        "content/effects/echo.js",
        "content/effects/vortex.js",
        "content/effects/sparkle.js",
        "content/effects/firefly.js",
        "content/effects/confetti.js",
        "content/effects/bubble.js",
        "content/effects/frost.js",
        "content/effects/flame.js",
        "content/effects/ripple.js",
        "content/effects/electric.js",
        "content/effects/diffuse.js",
        "content/settings-bridge.js",
        "content/content.js"
      ],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
